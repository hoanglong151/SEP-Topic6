@model IEnumerable<SEPQuestionAnswer.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    }
</style>

<section class="content">
    <div class="container-fluid">

        <div class="row clearfix">
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-light-green hover-expand-effect">
                    <div class="icon">
                        <i class="material-icons">forum</i>
                    </div>
                    <div class="content">
                        <div class="text">TỔNG SỐ CÂU HỎI</div>
                        <div class="number count-to" data-from="0" data-to="243" data-speed="1000" data-fresh-interval="20">@ViewBag.Total</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-pink hover-expand-effect">
                    <div class="icon">
                        <i class="material-icons">playlist_add_check</i>
                    </div>
                    <div class="content">
                        <div class="text">ACCEPT</div>
                        <div class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">@ViewBag.TotalA</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-cyan hover-expand-effect">
                    <div class="icon">
                        <i class="material-icons">help</i>
                    </div>
                    <div class="content">
                        <div class="text">PENDING</div>
                        <div class="number count-to" data-from="0" data-to="257" data-speed="1000" data-fresh-interval="20">@ViewBag.TotalP</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-orange hover-expand-effect">
                    <div class="icon">
                        <i class="material-icons">location_disabled</i>
                    </div>
                    <div class="content">
                        <div class="text">DISABLE</div>
                        <div class="number count-to" data-from="0" data-to="1225" data-speed="1000" data-fresh-interval="20">@ViewBag.TotalD</div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Top 6 Câu Hỏi Phổ Biến</h2>
                    </div>
                    <div class="body" style="padding-bottom:0px">
                        <div class="row clearfix">
                            @foreach (var count in ViewBag.CountTop6)
                            {
                                <div class="col-md-2">
                                    <div style="display:inline;width:125px;height:125px;"><input type="text" class="knob" data-max="1000" value="@count.CountView" data-width="125" data-height="125" data-thickness="0.25" data-fgcolor="#ed2b40" readonly="readonly" style="width: 66px; height: 41px; position: absolute; vertical-align: middle; margin-top: 41px; margin-left: -95px; border: 0px; background: none; font: bold 25px Arial; text-align: center; color: rgb(244, 67, 54); padding: 0px;"></div>
                                    <p style="width:125px; text-align:center; word-break:break-word">@count.AskQuestion.ToString().Substring(0, (count.AskQuestion.Length > 30) ? 30 : count.AskQuestion.Length)</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header" style="padding-bottom:0">
                        <h2>
                            Danh Sách Câu Hỏi
                        </h2>
                        <div style="margin:20px 0">
                            <a href=@Url.Action("Create","Questions") class="btn btn-danger">Tạo Câu Hỏi</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover dataTable js-exportablenosort">
                                <thead>
                                    <tr>
                                        <th>Câu Hỏi</th>
                                        <th>Người Hỏi</th>
                                        <th>Người Trả Lời</th>
                                        <th style="width:65px">Danh Mục</th>
                                        <th style="width:70px">Tình Trạng</th>
                                        <th style="width:65px">Lượt Xem</th>
                                        <th style="width:45px">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AskQuestion.ToString().Substring(0, (item.AskQuestion.Length > 40) ? 40 : item.AskQuestion.Length)</td>
                                            @*<td>@Html.Raw(!String.IsNullOrEmpty(item.Answer) ? item.Answer.Substring(0, Math.Min(item.Answer.Length, 40)) : item.Answer)</td>*@
                                            <td>@Html.DisplayFor(modelItem => item.Questioner)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Respondent)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                                            @if (item.Status == "Accept")
                                            {
                                                <td style="color:forestgreen">
                                                    @Html.DisplayFor(modelItem => item.Status)
                                                </td>
                                            }
                                            else if (item.Status == "Pending")
                                            {
                                                <td style="color:red">
                                                    @Html.DisplayFor(modelItem => item.Status)
                                                </td>
                                            }
                                            else if (item.Status == "Disable")
                                            {
                                                <td style="color:dimgrey">
                                                    @Html.DisplayFor(modelItem => item.Status)
                                                </td>
                                            }
                                            <td>@Html.DisplayFor(modelItem => item.CountView)</td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = item.ID})">
                                                    <i class="fas fa-pen"></i> |
                                                </a>
                                                <a href="@Url.Action("Details", new { id = item.ID})">
                                                    <i class="fas fa-info"></i> |
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = item.ID})">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

