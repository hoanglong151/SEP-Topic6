@model SEPQuestionAnswer.Models.Question

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <div class="container-fluid">

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Chi Tiết Câu Hỏi</h2>
                    </div>
                    <div class="body">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input value="@Model.Questioner" class="form-control" readonly />
                                <label class="form-label">Người Hỏi</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                @if (Model.Respondent == null)
                                {
                                    <input value="Không Có" class="form-control" readonly />
                                    <label class="form-label">Người Trả Lời</label>
                                }
                                else
                                {
                                    <input value="@Model.Respondent" class="form-control" readonly />
                                    <label class="form-label">Người Trả Lời</label>
                                }
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                @if (Model.Category_ID == null)
                                {
                                    <input value="Không Có" class="form-control" readonly />
                                    <label class="form-label">Danh Mục</label>
                                }
                                else
                                {
                                    <input value="@Model.Category.CategoryName" class="form-control" readonly />
                                    <label class="form-label">Danh Mục</label>
                                }
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line form-control">
                                <input value="@MvcHtmlString.Create(Model.AskQuestion)" class="form-control" readonly />
                                <label class="form-label">Câu Hỏi</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                @if (Model.Answer == null)
                                {
                                    <textarea name="Answer" cols="30" rows="3" class="form-control no-resize" required="" aria-required="true" readonly>Không Có</textarea>
                                    <label class="form-label">Câu Trả Lời</label>
                                }
                                else
                                {
                                    <textarea name="Answer" cols="30" rows="3" class="form-control no-resize" required="" aria-required="true" readonly>@MvcHtmlString.Create(Model.Answer)</textarea>
                                    <label class="form-label">Câu Trả Lời</label>
                                }
                            </div>
                        </div>
                        <div class="demo-radio-button">
                            <label class="form-label" style="color:#AAA; font-weight:100">Tình Trạng</label>
                            @Html.RadioButton("Status", "Accept", htmlAttributes: new { @class = "radio-col-light-green", @checked = "", @id = "Accept", @disabled = "disabled" })
                            <label for="Accept" class="m-l-20" style="color: #AAA;">Accept</label>
                            @Html.RadioButton("Status", "Pending", htmlAttributes: new { @class = "radio-col-red", @id = "Pending", @disabled = "disabled" })
                            <label for="Pending" class="m-l-20" style="color: #AAA;">Pending</label>
                            @Html.RadioButton("Status", "Disable", htmlAttributes: new { @class = "radio-col-grey", @id = "Disable", @disabled = "disabled" })
                            <label for="Reject" class="m-l-20">Disable</label>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line" style="margin-top:20px">
                                <input value="@Model.CountView" readonly class="form-control" />
                                <label class="form-label">Lượt Xem</label>
                            </div>
                        </div>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-primary waves-effect" />
                                <a class="btn btn-primary waves-effect" href=@Url.Action("Index","Questions")>Hủy</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
        document.querySelector('#item-2').setAttribute('class', 'active');
</script>
