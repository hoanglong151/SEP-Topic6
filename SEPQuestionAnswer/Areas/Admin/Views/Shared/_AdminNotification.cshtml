@model IEnumerable<SEPQuestionAnswer.Models.Question>

<nav class="navbar">
    <div class="container-fluid">
        <div class="navbar-header">
            <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
            <a href="javascript:void(0);" class="bars"></a>
            <a class="navbar-brand" href="@Url.Action("Index","AspNetRoles")">Quản Lý</a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <!-- Notifications -->
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                        @if (ViewBag.count == 0)
                        {
                            <i class="material-icons">notifications</i>
                            <span class="label-count">@ViewBag.count</span>
                        }
                        else
                        {
                            <i class="bell material-icons">notifications</i>
                            <span class="label-count">@ViewBag.count</span>
                        }
                    </a>
                    <ul class="dropdown-menu" style="padding-bottom:0">
                        <li class="header">NOTIFICATIONS</li>
                        <li class="body" style="height:295px;overflow:auto">
                            <ul class="menu">
                                @foreach (var item in Model)
                                {
                                    <li style="list-style:none">
                                        <a href="@Url.Action("Edit","Questions", new { id = item.ID})">
                                            <div class="icon-circle bg-light-green" style="position: relative; top: 5px;">
                                                <i class="material-icons" style="width: 100%; margin: 0;">new_releases</i>
                                            </div>
                                            <div class="menu-info">
                                                <h4 style="word-break:break-word">@item.AskQuestion.ToString().Substring(0, (item.AskQuestion.Length > 30) ? 30 : item.AskQuestion.Length)</h4>
                                                <p>
                                                    <i class="material-icons">access_time</i>@item.Date
                                                </p>
                                            </div>
                                        </a>
                                    </li>
                                }

                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
