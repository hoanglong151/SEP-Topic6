<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Trang Quản Trị</title>
    <!-- Favicon-->
    <link rel="icon" href="@Url.Content("~/assets/img/logoVLang.png")" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- FontsAweSome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />

    <!-- Bootstrap Core Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/bootstrap/css/bootstrap.css")" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/node-waves/waves.css")" rel="stylesheet" />

    <!-- Bootstrap Material Datetime Picker Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css")" rel="stylesheet" />

    <!-- Bootstrap DatePicker Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css")" rel="stylesheet" />

    <!-- Wait Me Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/waitme/waitMe.css")" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/animate-css/animate.css")" rel="stylesheet" />

    <!-- JQuery DataTable Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css")" rel="stylesheet">

    <!-- Custom Css -->
    <link href="@Url.Content("~/assetsAdmin/css/style.css")" rel="stylesheet">

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="@Url.Content("~/assetsAdmin/css/themes/all-themes.css")" rel="stylesheet" />

    <!-- Colorpicker Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.css")" rel="stylesheet" />

    <!-- Dropzone Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/dropzone/dropzone.css")" rel="stylesheet">

    <!-- Multi Select Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/multi-select/css/multi-select.css")" rel="stylesheet">

    <!-- Bootstrap Spinner Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/jquery-spinner/css/bootstrap-spinner.css")" rel="stylesheet">

    <!-- Bootstrap Tagsinput Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css")" rel="stylesheet">

    <!-- Bootstrap Select Css -->
    <!-- noUISlider Css -->
    <link href="@Url.Content("~/assetsAdmin/plugins/nouislider/nouislider.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
</head>

<body class="theme-green">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Top Bar -->
    @{
        Html.RenderAction("RenderHeader", "AspNetRoles");
    }
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <div class="user-info">
                <div class="image">
                    <img src="@Url.Content("~/assetsAdmin/images/user.png")" width="48" height="48" alt="User" />
                </div>
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Xin Chào</div>
                    <div class="email">@User.Identity.Name</div>
                    <div class="btn-group user-helper-dropdown">
                        <i style="padding:8px" class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                        <ul class="dropdown-menu pull-right" style="border-radius:5px">
                            <li><a href="@Url.Action("Index","Home", new { Area = ""})"><i class="material-icons">person</i>Trang Chủ</a></li>
                            <li role="separator" class="divider"></li>
                            <li>
                                @if (Request.IsAuthenticated)
                                {
                                    using (Html.BeginForm("LogOff", "Account", new { Area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <a href="javascript:document.getElementById('logoutForm').submit()">
                                            <i class="material-icons">backspace</i>
                                            Đăng xuất
                                        </a>

                                    }
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li class="header">MENU</li>
                    <li id="item-1">
                        <a href="@Url.Action("Index","Categories")">
                            <i class="material-icons">layers</i>
                            <span>Danh Mục</span>
                        </a>
                    </li>
                    <li id="item-2">
                        <a href="@Url.Action("Index","Questions")">
                            <i class="material-icons">question_answer</i>
                            <span>Câu Hỏi</span>
                        </a>
                    </li>
                    <li id="item-3">
                        <a href="@Url.Action("Index","AspNetRoles")">
                            <i class="material-icons">group_add</i>
                            <span>Phân Quyền</span>
                        </a>
                    </li>
                    <li id="item-4">
                        <a href="@Url.Action("IndexSV","AspNetRoles")">
                            <i class="material-icons">group</i>
                            <span>Danh Sách Sinh Viên</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    &copy; 2016 - 2017 <a href="javascript:void(0);">AdminBSB - Material Design</a>.
                </div>
                <div class="version">
                    <b>Version: </b> 1.0.5
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->

    </section>
    @RenderBody()
    <!-- Jquery Core Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery/jquery.min.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.list').find('[href="' + window.location.pathname + '"]').parent().addClass('active');
        });
    </script>
    <script>
        $('select').selectpicker();
    </script>
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/bootstrap/js/bootstrap.js")"></script>
    <!-- Select Plugin Js -->
    <!-- Slimscroll Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-slimscroll/jquery.slimscroll.js")"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/node-waves/waves.js")"></script>

    <!-- Autosize Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/autosize/autosize.js")"></script>

    <!-- Moment Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/momentjs/moment.js")"></script>

    <!-- Bootstrap Material Datetime Picker Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js")"></script>

    <!-- Bootstrap Datepicker Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js")"></script>

    <!-- Jquery DataTable Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/jquery.dataTables.js")"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.21/sc-2.0.2/datatables.min.js"></script>
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/extensions/export/buttons.flash.min.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/extensions/export/jszip.min.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/extensions/export/pdfmake.min.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/extensions/export/vfs_fonts.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/extensions/export/buttons.html5.min.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-datatable/extensions/export/buttons.print.min.js")"></script>

    <!-- Bootstrap Colorpicker Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js")"></script>

    <!-- Dropzone Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/dropzone/dropzone.js")"></script>

    <!-- Input Mask Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-inputmask/jquery.inputmask.bundle.js")"></script>

    <!-- Multi Select Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/multi-select/js/jquery.multi-select.js")"></script>

    <!-- Jquery Spinner Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-spinner/js/jquery.spinner.js")"></script>

    <!-- Bootstrap Tags Input Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/bootstrap-tagsinput/bootstrap-tagsinput.js")"></script>

    <!-- noUISlider Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/nouislider/nouislider.js")"></script>

    <!-- Jquery Knob Plugin Js -->
    <script src="@Url.Content("~/assetsAdmin/plugins/jquery-knob/jquery.knob.min.js")"></script>
    <!-- Custom Js -->
    <script src="@Url.Content("~/assetsAdmin/js/admin.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/js/pages/tables/jquery-datatable.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/js/pages/forms/basic-form-elements.js")"></script>
    <script src="@Url.Content("~/assetsAdmin/js/pages/charts/jquery-knob.js")"></script>

    <script src="@Url.Content("~/assetsAdmin/js/pages/forms/advanced-form-elements.js")"></script>

    <!-- (Optional) Latest compiled and minified JavaScript translation files -->
    <!-- Demo Js -->
    <script src="@Url.Content("~/assetsAdmin/js/demo.js")"></script>

    @RenderSection("scripts", required: false)
    @RenderSection("mySection", required: false)
</body>

</html>
