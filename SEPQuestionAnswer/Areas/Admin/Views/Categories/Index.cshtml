@model IEnumerable<SEPQuestionAnswer.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
int count = Model.Count();
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Wellcome Admin <small>Catagory List</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data</li>
        </ol>

    </div>

    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Catagory List
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>CategoryName</th>
                                        <th>StatusName</th>
                                        <th>ID</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for(int i = 1; i <= count; i++)
                                    {
                                        string cssClassName = i % 2 == 1 ? "odd" : "even";
                                        <tr class="@cssClassName">
                                            <td>@Model.ElementAt(i - 1).CategoryName</td>
                                            <td>@Model.ElementAt(i - 1).StatusCategory.StatusName</td>
                                            <td>@Model.ElementAt(i - 1).ID</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
    <footer><p>All right reserved. Template by: <a href="http://webthemez.com">WebThemez.com</a></p></footer>
</div>